<h1>Listing offers</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Content</th>
    <th>Addition</th>
    <th>Taxrate</th>
    <th>Customer</th>
		<th>User</th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%=h offer.number %></td>
    <td><%=h offer.content %></td>
    <td><%=h offer.addition %></td>
    <td><%=h offer.taxrate %></td>
    <td><%=h offer.customer %></td>
    <td><%=h offer.user %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New offer', new_offer_path %>