<h1>Listing expenses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hours</th>
    <th>Rate</th>
    <th>Fixcosts</th>
    <th>Remark</th>
    <th>Offer</th>
    <th>User</th>
  </tr>

<% @expenses.each do |expense| %>
  <tr>
    <td><%=h expense.name %></td>
    <td><%=h expense.hours %></td>
    <td><%=h expense.rate %></td>
    <td><%=h expense.fixcosts %></td>
    <td><%=h expense.remark %></td>
    <td><%=h expense.offer %></td>
    <td><%=h expense.user %></td>
    <td><%= link_to 'Show', expense %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New expense', new_expense_path %>